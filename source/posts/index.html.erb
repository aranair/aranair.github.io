---
pageable: true
per_page: 15
---
<div class="pagination">
  <% if paginate && num_pages > 1 %>
    Page <%= page_number %> of <%= num_pages %>
    <p>
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>
    </p>
  <% end %>
</div>

<% page_articles.each_with_index do |article, i| %>
  <div class="article-list__article-summary">
    <h2 class="article-summary__article-title">
      <%= link_to article.title, article %><br>
      <span>Published on <%= article.date.strftime("%b %d, %Y") %></span>
    </h2>
    <%= article.summary(200) %>
    <%= link_to "Read More", article, class: "article-summary__readmore" %>
  </div>
<% end %>

<div class="pagination-mobile">
  <% if paginate && num_pages > 1 %>
    Page <%= page_number %> of <%= num_pages %>
    <p>
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page %>
      <% end %>
      <% if next_page %>
        <%= link_to 'Next page', next_page %>
      <% end %>
    </p>
  <% end %>
</div>
