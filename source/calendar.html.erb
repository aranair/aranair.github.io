---
pageable: true
per_page: 10
---

<h2>Archive for
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h2>

<% page_articles.each_with_index do |article, i| %>
  <div class="article-list__article-summary">
    <h2 class="article-summary__article-title">
      <%= link_to article.title, article %><br>
      <span><%= article.date.strftime("%b %d, %Y") %></span>
    </h2>
    <%= article.summary(250) %>
    <%= link_to "Read more &#8594;", article, class: "article-summary__readmore" %>
  </div>
<% end %>

<%= partial("pagination", locals: { 
  prev_page: prev_page, next_page: next_page,
  num_pages: num_pages, page_number: page_number,
  paginate: paginate
}) %>

<%= partial "tags_partial" %>
