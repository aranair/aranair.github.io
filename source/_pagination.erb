<div class="pagination">
  <% if paginate && num_pages > 1 %>
    <p>
      Page <%= page_number %> of <%= num_pages %></br>
      <% if prev_page %>
        <%= link_to 'Older Posts', prev_page %>
      <% end %>
      <% if next_page %>
        <%= link_to 'Newer Posts', next_page %>
      <% end %>
    </p>
  <% end %>
</div>
