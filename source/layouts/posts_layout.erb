<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% wrap_layout :layout do %>
  <div class="article row">
    <h1 class="article__article-title"><%= current_article.title %></h1>
    <%= yield %>
  </div>
<% end %>
