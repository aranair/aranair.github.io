<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.try(:title) || 'Learnings of a Software Engineer, Boa Ho Man' %></title>

    <%=
      display_meta_tags(
        description: (current_page.try(:data).try(:description) || 'A tech blog about learnings in DevOps, Go, Ruby and software engineering in general, written by Boa Ho Man'),
        'og:site_name': 'aranair.github.io',
        'og:title': current_page.try(:title) || 'Learnings of a Software Engineer, Boa Ho Man',
      )
    %>

    <!-- Bootstrap Stuff -->
    <link href=rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700|Lato|Montserrat">
    <%# <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css"> %>
    <%= stylesheet_link_tag "normalize" %>
    <%= stylesheet_link_tag "blog" %>
    <%= javascript_include_tag  "all", async: true %>
    <!-- Latest compiled and minified JavaScript -->
    <%# <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script> %>
    <%= partial "ga" %>
  </head>
  <body class="<%= page_classes %>">
    <%= partial "navbar" %>
    <div class="wrapper">
      <div class="container">
        <%= partial "tags_partial" %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
